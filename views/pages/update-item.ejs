<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', {title: title}); %>
</head>
<body>
    <header>
        <%- include('../partials/header'); %>
    </header>
    <main>
        <h1>Update</h1>
        <form action="/update-item" method="POST">
            <label for="clothingType">Clothing Type</label>
            <select name="clothingType">
                <option disabled>Select</option>
                <option>Top</option>
                <option>Bottom</option>
                <option>One Piece</option>
                <option>Outerwear</option>
                <option>Shoes</option>
            </select>
            <p>Type --> <%= clothingType %></p>

            <label for="clothingColor">Color</label>
            <select name="clothingColor">
                <option disabled>Select</option>
                <option>Red</option>
                <option>Orange</option>
                <option>Yellow</option>
                <option>Green</option>
                <option>Blue</option>
                <option>Purple</option>
                <option>White</option>
                <option>Black</option>
                <option>Gray</option>
                <option>Brown</option>
            </select>
            <p>Color --> <%= clothingColor %></p>

            <label for="warmRating">Warmth Level</label>
            <input type="range" min="0" max="5" name="warmRating" value="<%= warmRating %>">

            <label for="casualRating">Casual Level</label>
            <input type="range" min="0" max="5" name="casualRating" value="<%= casualRating %>">

            <label for="clothingImage">Image</label>
            <input type="text" name="clothingImage" value="<%= clothingImage %>">

            <input type="hidden" name="clothingId" value="<%= clothingId %>">
            <input type="hidden" name="userId" value="1">

            <input type="submit" value="Update"> | <a href="/closet">Back</a>
        </form>
    </main>
    <footer>
        <%- include('../partials/footer', {dateString: dateString}); %>
    </footer>
</body>
</html>